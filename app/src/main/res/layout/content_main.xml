<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/bstart"
        android:onClick="startbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="10pt"
        android:text="START"
        android:layout_gravity="center_horizontal"
        android:background="#1556d9" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignBounds"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"
        android:columnCount="2"
        android:rowCount="2">


        <Button
            android:id="@+id/bgreen"
            android:onClick="eventoverde"
            android:background="#33e30c"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="70pt"
            android:layout_height="70pt"/>
        <Button
            android:id="@+id/byellow"
            android:onClick="eventoamarillo"
            android:background="#fbff0b"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="70pt"
            android:layout_height="70pt"/>
        <Button
            android:id="@+id/bred"
            android:onClick="eventorojo"
            android:background="#ff0008"
            android:layout_marginTop="5dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="70pt"
            android:layout_height="70pt"/>
        <Button
            android:id="@+id/bblue"
            android:onClick="eventoazul"
            android:background="#000000"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="70pt"
            android:layout_height="70pt"
            />

    </GridLayout>
</LinearLayout>

